
{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      },
      {
        "name": "istanbul-lib-coverage"
      }
    ],
    "paths": {
        "@/layout/*": [
          "components/layout/*"
        ],
        "@/ui/*": [
          "components/ui/*"
        ],
        "@/screens/*": [
          "components/screens/*"
        ],
        "@/*": [
          "./*"
        ],
      },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
